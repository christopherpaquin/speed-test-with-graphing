            <template>Speedtest Monitoring</template>
            <name>Speedtest Monitoring</name>
            <description>Template for monitoring internet speed test results via speedtest-cli. Includes download speed, upload speed, ping/latency, 24-hour averages, test statistics, and server information.</description>
            <groups>
                <group>
                    <uuid>00000000-0000-0000-0000-000000000001</uuid>
                    <name>Templates</name>
                </group>
            </groups>
            <items>
                
                <item>
                    <name>Download Speed (Latest)</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>speedtest.download</key>
                    <value_type>FLOAT</value_type>
                    <units>Mbps</units>
                    <description>Latest download speed from speed test</description>
                    <applications>
                        <application>
                            <name>Speedtest - Latest Values</name>
                        </application>
                    </applications>
                    <history>7d</history>
                    <trends>365d</trends>
                    <update_interval>10m</update_interval>
                </item>
                
                
