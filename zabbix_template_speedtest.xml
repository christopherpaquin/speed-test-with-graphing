            <triggers>
                
                <trigger>
                    <uuid>16b73008-cb1e-42ea-ad7d-82271387ab0c</uuid>
                    <expression>{Speedtest Monitoring:speedtest.download.last()}&lt;100</expression>
                    <name>Download speed below 100 Mbps</name>
                    <priority>WARNING</priority>
                    <description>Download speed has dropped below 100 Mbps. Current value: {ITEM.LASTVALUE} Mbps</description>
                </trigger>
                
                
                <trigger>
                    <uuid>900e58b9-b4d2-4ee9-9b2d-9375b6499fcd</uuid>
                    <expression>{Speedtest Monitoring:speedtest.upload.last()}&lt;10</expression>
                    <name>Upload speed below 10 Mbps</name>
                    <priority>WARNING</priority>
                    <description>Upload speed has dropped below 10 Mbps. Current value: {ITEM.LASTVALUE} Mbps</description>
                </trigger>
                
                
                <trigger>
                    <uuid>b6695b3f-10ba-4dee-ad90-8dc227a261eb</uuid>
                    <expression>{Speedtest Monitoring:speedtest.ping.last()}&gt;100</expression>
                    <name>Ping/Latency above 100ms</name>
                    <priority>WARNING</priority>
                    <description>Ping/Latency has exceeded 100ms. Current value: {ITEM.LASTVALUE} ms</description>
                </trigger>
                
                
                <trigger>
                    <uuid>678e017f-c870-4d2d-8e07-441a9ec68a5d</uuid>
                    <expression>{Speedtest Monitoring:speedtest.test_count_24h.last()}&lt;12</expression>
                    <name>Insufficient speed tests in last 24h</name>
                    <priority>WARNING</priority>
                    <description>Less than 12 speed tests performed in the last 24 hours (expected ~144 tests for 10-minute interval). Current count: {ITEM.LASTVALUE}</description>
                </trigger>
                
                
                <trigger>
                    <uuid>946bac85-0311-4aba-8f04-86a7dba665f3</uuid>
                    <expression>{Speedtest Monitoring:speedtest.download.last()}&lt;50</expression>
                    <name>Download speed critically low (&lt;50 Mbps)</name>
                    <priority>HIGH</priority>
                    <description>Download speed has dropped critically below 50 Mbps. Current value: {ITEM.LASTVALUE} Mbps</description>
                </trigger>
                
                
                <trigger>
                    <uuid>9785653c-98c5-4cf5-819d-dc9ba4f9e4f5</uuid>
                    <expression>{Speedtest Monitoring:speedtest.upload.last()}&lt;5</expression>
                    <name>Upload speed critically low (&lt;5 Mbps)</name>
                    <priority>HIGH</priority>
                    <description>Upload speed has dropped critically below 5 Mbps. Current value: {ITEM.LASTVALUE} Mbps</description>
                </trigger>
                
                
                <trigger>
                    <uuid>bbfb6c84-aed3-4e29-bc20-a6127eb72a5e</uuid>
                    <expression>{Speedtest Monitoring:speedtest.ping.last()}&gt;200</expression>
                    <name>Ping/Latency critically high (&gt;200ms)</name>
                    <priority>HIGH</priority>
                    <description>Ping/Latency has exceeded 200ms. Current value: {ITEM.LASTVALUE} ms</description>
                </trigger>
            </triggers>
